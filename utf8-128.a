.£§		!h ad00000040
.´µ		!h afb1
.Ä		!h db
.Ö		!h dc
.Üßàâäèéêî	!h dd0000beb200b400bb000000aeacb5000000b6
.ôöùûü		!h b700bc0000b300b8bd
